doctype html
html
    head
        meta(charset='utf-8')
        title= '大魔术师'
        link(href='css/login.css', rel='stylesheet')
    body
        form#login(method='POST', action='login')
            if error
                p.alert.alert-danger #{ error }

            div.form-group
                input.form-control.input(name='username', placeholder='用户名', type='text')
            div.form-group
                input.form-control.input(name='password', placeholder='密码', type='password')
            div.form-group
                input.btn.btn-primary.btn-block.pull-right(type="submit", value="登录")

